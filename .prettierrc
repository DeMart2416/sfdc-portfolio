{
  "trailingComma": "none",
  "singleQuote": true,
  "tabWidth": 4,
  "useTabs":true,
  "printWidth": 140,
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc"
      }
    },
    {
      "files": "**/*.{cls,trigger,apex}",
      "options": {
        "apexInsertFinalNewline": false,
        "printWidth": 140
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html"      
      }
    }
  ]
}
